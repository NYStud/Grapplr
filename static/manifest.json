{
    "manifest_version": 2

    ,"name": "Grapplr V"
    ,"short_name": "grapplr"
    ,"description": "Your new frontend to the web."
    ,"version": "0.0.0"

    ,"chrome_url_overrides" : {
        "newtab": "index.html"
    }
    ,"icons": {
        "16": "img/icon.png"
    }
    ,"permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "storage",
        "topSites",
        "tabs",
        "management",
        "unlimitedStorage",
        "downloads"
    ]
    ,"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
