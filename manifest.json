{
    "manifest_version": 2

    ,"name": "Grapplr"
    ,"short_name": "Grapplr"
    ,"description": "The way a browser was meant to be used"
    ,"version": "0.1.5"

    ,"browser_action": {
        "default_icon": "icon.png"
        ,"default_popup": "alias.html"
        ,"default_title": "Click to grapple this site into your favorites!"
        ,"key":"grapplrTab"
    }

    ,"chrome_url_overrides" : {
        "newtab": "grapplr.html"
    }
    ,"icons": {
        "16": "icon16.png"
        ,"48": "icon48.png"
        ,"128": "icon128.png"
    }
    ,"permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "storage",
        "topSites",
        "tabs",
        "management",
        "unlimitedStorage",
        "downloads"
    ]
    ,"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
    /* ,"content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'" */
}
