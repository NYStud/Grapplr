{
  "manifest_version": 2,

  "name": "Grapplr",
  "description": "A better home page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "add.html",
    "default_title": "Click to grapple this site into your favorites!"
  },
    
  "chrome_url_overrides" : {
    "newtab": "grapplr.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}