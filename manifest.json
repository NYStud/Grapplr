{
  "manifest_version": 2,

  "name": "Grapplr",
  "description": "An intelligent, customizable, and beautiful new-tab page with useful tools",
  "version": "0.3",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "add.html",
    "default_title": "Click to grapple this site into your favorites!",
    "key":"grapplrTab"
  },
    
  "chrome_url_overrides" : {
    "newtab": "grapplr.html"
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage", 
    "topSites"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}