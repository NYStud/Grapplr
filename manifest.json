{
    "manifest_version": 2

    ,"name": "Grapplr V"
    ,"short_name": "Grapplr"
    ,"description": "Your personal frontend to the web."
    ,"version": "0.0.1"

    ,"browser_action": {
        "default_icon": "icon.png"
        ,"default_popup": "views/pop_action.html"
        ,"default_title": "Click to grapple this site into your favorites!"
        ,"key":"grapplrTab"
    }

    ,"chrome_url_overrides" : {
        "newtab": "views/grapplr.html"
    }
    ,"icons": {
        "16": "icon16.png"
        ,"48": "icon48.png"
        ,"128": "icon128.png"
    }
    ,"permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "storage",
        "topSites",
        "tabs",
        "management",
        "unlimitedStorage",
        "downloads"
    ]
}
